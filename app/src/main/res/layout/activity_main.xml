<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tkm.at.minime.MainActivity">

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="#ffffffff"
        app:compactCalendarTextColor="#ff000000"
        app:compactCalendarCurrentDayTextColor="#ff000000"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#aaaaaaaa"
        app:compactCalendarCurrentDayBackgroundColor="#55B71C1C"
        app:compactCalendarMultiEventIndicatorColor="#ff000000">

    </com.github.sundeepk.compactcalendarview.CompactCalendarView>

</LinearLayout>
